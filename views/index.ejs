<%layout('layout/boilerplate')%>

<script>
    $(Document).ready(function(){
        $("#userInfo").DataTable()
    })
</script>

<body>
    <table id="userInfo" class="table table-striped" style="width:100%">
    <thead>
    <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Up Votes</th>
        <th>Down Votes</th>
        <th>Level</th>
    </tr>
    </thead>
    <tbody>
    <%for(let user of users){%>
    <tr>
        <td><a href="/api/user/<%=user.id%>"><%=user.name%></a></td>
        <td><%=user.address%></td>
        <td><%=user.upvote%></td>
        <td><%=user.downvote%></td>
        <td><%=user.level%></td>
    </tr>
    <%}%>
    </tbody>
    <tfoot>
    <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Up Votes</th>
        <th>Down Votes</th>
        <th>Level</th>
    </tr>
    </tfoot>
</table>
</body>
